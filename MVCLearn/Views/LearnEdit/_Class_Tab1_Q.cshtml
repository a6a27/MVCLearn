@model List<MVCLearn.ViewModels.ClassStudent>
@using Common

<div class="col-sm-12" style="overflow-y: auto;">
    <table class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer collapsed" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.FirstOrDefault().ClassStudent_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.FirstOrDefault().ClassStudent_Tel)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var row in Model)
                {
                        <tr onclick="SDetail('@row.ClassStudent_ID', '@Action_Type.Select')">
                            <td>
                                @row.ClassStudent_Name
                            </td>
                            <td>
                                @row.ClassStudent_Tel
                            </td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>
